<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buy_nav"
    app:startDestination="@id/allBuysFragment">

    <fragment
        android:id="@+id/allBuysFragment"
        android:name="com.calcmarket.ui.fragments.AllBuysFragment"
        android:label="AllBuysFragment"
        tools:layout="@layout/fragment_all_buys">
        <action
            android:id="@+id/action_allBuysFragment_to_newBuyFragment"
            app:destination="@id/newBuyFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_allBuysFragment_to_buyDetailFragment"
            app:destination="@id/buyDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/newBuyFragment"
        android:name="com.calcmarket.ui.fragments.NewBuyFragment"
        android:label="NewBuyFragment"
        tools:layout="@layout/fragment_new_buy"/>

    <fragment
        android:id="@+id/buyDetailFragment"
        android:name="com.calcmarket.ui.fragments.BuyDetailFragment"
        android:label="BuyDetailFragment"
        tools:layout="@layout/fragment_buy_detail"/>
</navigation>