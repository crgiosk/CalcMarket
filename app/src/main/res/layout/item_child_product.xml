<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="com.calcmarket.ui.binds.ProductBinding" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/infoProductLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_curve_light"
            android:layout_marginTop="@dimen/dimen_10"
            android:padding="@dimen/padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/nameProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{product.name}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/countProduct"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Arroz" />

            <TextView
                android:id="@+id/countProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:any_to_string="@{product.amount}"
                app:layout_constraintBottom_toBottomOf="@+id/nameProduct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/nameProduct"
                tools:text="2" />

            <TextView
                android:id="@+id/valueUnit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:product_unit_value="@{product.costItem}"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="@dimen/dimen_10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/countProduct"
                tools:text="Valor de unidad: $99999" />

            <TextView
                android:id="@+id/valueTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:product_total_value="@{product.total}"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAlignment="viewEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/valueUnit"
                tools:text="Valor total: $9999999" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>